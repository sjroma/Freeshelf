<p id="notice"><%= notice %></p>

<h1>Books</h1>

 <h4><div class="welcome">Welcome 
	 <% if current_user %>
     <%= User.find(session[:user_id]).first_name %>
   <% end %>
 </div></h4>
<p></p>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th>Download link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
        <td><%= book.url %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a New Book', new_book_path %>
<h4><%= link_to "Log out", logout_path, method: :delete %></h4>
