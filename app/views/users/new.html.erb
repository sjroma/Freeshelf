<div class="login">
  <div class="container">
    <div class="form">
			
			<h1>Sign up</h1>
        <%= form_for(@user) do |form| %>
				<div class="field">
					<%= form.label :first_name %>
          <%= form.text_field :first_name, :placeholder => "First name" %>
				</div>
			
			  <div class="field">
			    <%= form.label :last_name %>
          <%= form.text_field :last_name, :placeholder => "Last name" %>
			  </div>
			
			  <div class="field">
			    <%= form.label :email %>
          <%= form.email_field :email, :placeholder => "Email" %>
			  </div>
			
			  <div class="field">
			    <%= form.label :password %>
          <%= form.password_field :password, :placeholder => "Password" %>
			  </div>
			
			  <div class="actions">
          <%= form.submit "Create account", class: "btn btn-submit" %>
			  </div>
        <% end %>
			
		</div>
	</div>
</div>