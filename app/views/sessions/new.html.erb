<div class="login">
	<div class="container">
		<div class="form">

      <h1>Log in</h1>
			
			<%= form_for(:session, url: login_path) do |form| %>
			  <div class="field">
			    <%= form.label :email %>
			    <%= form.email_field :email, :placeholder => "Email" %>
			  </div>
			
			  <div class="field">
					<%= form.label :password %>
			    <%= form.password_field :password, :placeholder => "Password" %>
			  </div>
			  
			  <div class="actions">
			    <%= form.submit "Log in", class: "btn-submit" %>
				</div>
			<% end %>
		
    </div>
	</div>
</div>